<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               label="Hasher">
            <dynamic
                  class="com.gfairchild.hasher.HasherCompoundContributionItem"
                  id="com.gfairchild.hasher.dynamicmenu">
            </dynamic>
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                     </adapt>
                     <adapt
                           type="org.eclipse.core.resources.IFolder">
                     </adapt>
                  </or>
               </iterate>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.gfairchild.hasher.HasherHandler"
            commandId="com.gfairchild.hasher.hash">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.gfairchild.hasher.hash"
            name="Hash">
         <commandParameter
               id="com.gfairchild.hasher.hash.algorithmname"
               name="Algorithm"
               optional="false">
         </commandParameter>
      </command>
   </extension>

</plugin>
